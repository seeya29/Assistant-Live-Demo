# SmartBrief v3 + Daily Cognitive Agent Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# Choose 'mongodb' or 'postgresql'
DATABASE_TYPE=demo

# MongoDB Configuration (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=smartbrief_cognitive_agent

# PostgreSQL Configuration (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=smartbrief_cognitive_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Context and Learning Configuration
MAX_CONTEXT_HISTORY=50
CONTEXT_TIME_WINDOW_HOURS=72
LEARNING_RATE=0.1
CONFIDENCE_THRESHOLD=0.7

# File Paths
USER_CONTEXTS_DIR=user_contexts
TASK_QUEUE_FILE=task_queue.json
DASHBOARD_LOGS_FILE=dashboard_logs.json
AGENT_MEMORY_FILE=agent_memory.json
SUMMARIZER_LEARNING_FILE=summarizer_learning.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=smartbrief_cognitive_agent.log

# Security (for production)
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Testing Configuration
TEST_API_URL=http://localhost:8000
TEST_DATABASE_TYPE=demo

# Email Configuration (if using email fetcher)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20